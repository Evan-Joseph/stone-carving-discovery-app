# BigModel OpenAI-compatible endpoint
BIGMODEL_BASE_URL=https://open.bigmodel.cn/api/paas/v4
BIGMODEL_API_KEY=replace-with-your-real-key
BIGMODEL_MODEL=glm-4.7-flash

# server
PORT=8787
AI_MAX_RETRIES=3
AI_TIMEOUT_MS=45000
AI_HISTORY_MAX_ITEMS=10
AI_HISTORY_ITEM_MAX_CHARS=800

# optional museum search enhancement
BIGMODEL_ENABLE_WEB_SEARCH=true
BIGMODEL_WEB_SEARCH_ENGINE=search_pro
BIGMODEL_WEB_SEARCH_COUNT=5
BIGMODEL_WEB_SEARCH_CONTENT_SIZE=medium
